{
  "name": "@southleft/altitude",
  "description": "Design system created by Southleft.com",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "\n========== Deploying ==========": "",
    "build": "yarn build:web-components && yarn build:react",
    "build:all": "yarn build && yarn build:storybook-web-components && yarn build:storybook-react && yarn build:app-angular && yarn build:app-react && yarn build:app-svelte && yarn copy:components && yarn copy:index",
    "build:storybook-web-components": "yarn workspace @southleft/al-web-components build:storybook --output-dir ../../dist/storybook/web-components",
    "build:storybook-react": "yarn workspace @southleft/al-react build:storybook --output-dir ../../dist/storybook/react",
    "copy:components": "mkdir -p dist && cp -r ./libs/al-web-components/dist ./dist/al-web-components",
    "copy:index": "mkdir -p dist && cp ./index.html ./dist/index.html",
    "\n========== Apps ==========": "",
    "build:app-angular": "yarn workspace al-app-angular build --output-path ../../dist/angular --base-href /angular/browser/",
    "build:app-react": "yarn workspace al-app-react build --base=/react --outDir ../../dist/react",
    "build:app-svelte": "yarn workspace al-app-svelte build --base=/svelte --outDir ../../dist/svelte",
    "start:app-angular": "yarn workspace al-app-angular start",
    "start:app-enhance": "yarn workspace al-app-enhance start",
    "start:app-react": "yarn workspace al-app-react start",
    "start:app-svelte": "yarn workspace al-app-svelte start",
    "\n========== Libs ==========": "",
    "build:web-components": "yarn workspace @southleft/al-web-components build",
    "build:react": "yarn workspace @southleft/al-react build",  
    "start:web-components": "yarn workspace @southleft/al-web-components start", 
    "start:react": "yarn workspace @southleft/al-react start",
    "publish:components": "yarn build && yarn workspace @southleft/al-web-components publish && yarn workspace @southleft/al-react publish",   
    "\n========== Resource Hub Page ==========": "",
    "start:index": "yarn copy:components && yarn copy:index && npx serve ./dist",
    "dev:index": "npx serve ./dist"
  }
}