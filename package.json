{
  "name": "@southleft/altitude",
  "description": "Design system created by Southleft.com",
  "private": true,
  "version": "0.0.1",
  "license": "UNLICENSED",
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspace al-web-components build && yarn workspace al-react build",
    "build:app-react": "yarn workspace al-react-app build",
    "build:storybook-web-components": "yarn workspace al-web-components build:storybook --output-dir ../../storybook/web-components",
    "build:storybook-react": "yarn workspace al-react build:storybook --output-dir ../../storybook/react",
    "build:all": "yarn build && yarn build:storybook-web-components && yarn build:storybook-react && yarn build:app-react"
  }
}